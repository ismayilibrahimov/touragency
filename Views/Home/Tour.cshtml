@model IEnumerable<TourAgency.Models.Tour>

@{
    ViewData["Title"] = "Tours Page";
}

<div class="site-section">

    <div class="container">

        <div class="row">
            @foreach (var item in Model.Reverse<Tour>())
            {
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-4">
                    <a asp-controller="Home" asp-action="Booking" asp-route-id="@item.ID" class="unit-1 text-center">
                        <img src="~/images/@item.ImageName" alt="Image" class="img-fluid">
                        <div class="unit-1-text">
                            <strong class="text-primary mb-2 d-block">$@item.Price</strong>
                            <h3 class="unit-1-heading">@item.Title</h3>
                        </div>
                    </a>
                </div>
            }
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-4">
                    <a asp-controller="Home" asp-action="booking" class="unit-1 text-center">
                        <img src="images/01-greece.jpg" alt="Image" class="img-fluid">
                        <div class="unit-1-text">
                            <strong class="text-primary mb-2 d-block">$590</strong>
                            <h3 class="unit-1-heading">Santorini, Greece</h3>
                        </div>
                    </a>
                </div>
            </div>
    </div>

</div>



<div class="site-section"></div>